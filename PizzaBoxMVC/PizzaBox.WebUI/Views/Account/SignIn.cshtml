@model PizzaBox.WebUI.Models.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<h1>Signing In</h1>

@*<h4>AccountViewModel</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passphrase" class="control-label"></label>
                <input asp-for="Passphrase" class="form-control" />
                <span asp-validation-for="Passphrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SignIn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

